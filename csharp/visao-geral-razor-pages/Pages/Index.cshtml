@page
@using System.Globalization;
@model MyRazorApp.Pages.IndexModel

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <table>
            <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
            </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Title</td>
                        <td>@category.Price.ToString("C", new CultureInfo("pt-BR"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>